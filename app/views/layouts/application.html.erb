<!DOCTYPE html>
<html>
  <head>
    <title>Userapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "topright" %>
    <% else %>
      <%= link_to 'Login', root_path, data: { toggle: 'modal', target:'#myModal'}, class: "topright" %>
    <% end %>
    <%= yield %>
  </body>
</html>
<style type="text/css">
  .topright {
  position: absolute;
  top: 8px;
  right: 16px;
  font-size: 18px;
}
</style>